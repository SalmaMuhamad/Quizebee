@model QuizbeePlus.ViewModels.ControlPanelViewModel
@{
    ViewBag.Title = Model.PageInfo.PageTitle;
}

<link href="~/Content/plugins/sweet-alert2/sweetalert2.min.css" rel="stylesheet" />
<script src="/Content/plugins/sweet-alert2/sweetalert2.min.js"></script>

<div class="container-fluid">
    <div class="">
        <ul class="nav nav-tabs tabs-bordered">
            <li class="nav-item">
                <a href="#usersTab" data-toggle="tab" aria-expanded="false" class="nav-link active">
                    Users
                </a>
            </li>
            <li class="nav-item">
                <a href="#rolesTab" data-toggle="tab" aria-expanded="false" class="nav-link">
                    Roles
                </a>
            </li>
            <li class="nav-item">
                <a href="#categoriesTab" data-toggle="tab" aria-expanded="false" class="nav-link">
                    Categories
                </a>
            </li>

            <li class="nav-item">
                <a href="#questionsTab" data-toggle="tab" aria-expanded="false" class="nav-link">
                    Questions
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="usersTab">
                @{
                    Html.RenderAction("Users");
                }
            </div>
            <div class="tab-pane" id="rolesTab">
                @{
                    Html.RenderAction("Roles");
                }
            </div>

            <div class="tab-pane" id="categoriesTab">
                @{
                    Html.RenderAction("Categories");
                }
            </div>
            <div class="tab-pane" id="questionsTab">
                @{
                    Html.RenderAction("Questions");
                }
            </div>

        </div>
    </div>
</div>
